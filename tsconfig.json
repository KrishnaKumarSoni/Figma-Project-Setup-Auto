{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["ES6", "DOM", "DOM.Iterable"],
      "strict": true,
      "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
        "@/*": ["./*"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }